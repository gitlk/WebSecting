/*浮动*/
.fl { float: left; }
.fr { float: right; }

/*清除浮动*/
.clearfix:after {
    height: 0;
    content: "";
    display: block;
    clear: both;
    visibility: hidden;
    font-size: 0;
}
.clearfix { zoom: 1; }
* html .clearfix { zoom: 1; }


.fw {
	width: 1200px;
	margin: 0 auto;
}

/*=== header ===*/
#header {
	width: 100%;
	height: 94px;
	padding-bottom: 34px;
	background: url(../images/header-bg.png) repeat-x;
}
#logo { padding-top: 16px; }
#logo a img { width: 417px; height: 78px; }
#search {
	position: relative;
	width: 213px;
	height: 30px;
	padding-left: 36px;
	margin-top: 62px;
	margin-left: 190px;
	background: url(../images/search-bg.png) no-repeat;
}
#search input {
	height: 30px;
	line-height: 30px;
	width: 196px;
	*position: absolute;
	*left:40px;
}
#search span.search-btn {
	position: absolute;
	top: 0;
	left: 0;
	width: 28px;
	height: 30px;
	cursor: pointer;
	background: url(../images/search.png) no-repeat 12px center;
}
#shares {
	padding-top: 10px;
	width: 254px;
	font-size: 0;
	text-align: right;
}
#shares a {
	display: inline-block;
	width: 30px;
	height: 26px;
	padding-top: 4px;
	margin: 0 12px;
	text-align: center;
	background: url(../images/shares-bg.png);
}
#shares p {
	margin-top: 26px;
	padding-left: 26px;
	font-weight: bold;
	background: url(../images/tel.png) no-repeat left center;
}
#shares p span+span { padding-left: 18px; }


/*=== nav ===*/
#nav {
	width: 100%;
	height: 64px;
	background-color: #20477c;
}
#nav .nav .navitem {
	height: 64px;
	float: left;
	text-align: center;
	font-size: 0;
}
#nav .nav .navitem+.navitem { margin-left: 12px; }
#nav .nav .navitem a {
	height: 54px;
	display: inline-block;
	padding: 10px 42px 0 42px;
}
#nav .nav .navitem a span {
	display: block;
	color: #fff;
	font-size: 16px;
	text-align: center;
}
#nav .nav .navitem a span.en { font-size: 14px; }
#nav .nav .navitem a:hover, 
#nav .nav .navitem a.active { background-color: #bb2230; }


/*=== footer ===*/
#footer {
	width: 100%;
	height: 154px;
	padding-top: 36px;
	background-color: #1e2e44;
}
#footer .foot-nav {
	font-size: 0;
	text-align: center;
	height: 22px;
	line-height: 22px;
}
#footer .foot-nav a {
	padding: 0 12px;
	color: #fff;
}
#footer .foot-nav a:hover { color: #bfc5ce; }
#footer .foot-nav span.fg {
	display: inline-block;
	height: 14px;
	border-right: 1px solid #fff;
	border-left: 1px solid #555e6c;
}
#footer p {
	padding-top: 18px;
	text-align: center;
	color: #bfc5ce;
	font-size: 12px;
}
#footer p span,
#footer p a {
	color: #bfc5ce;
	font-size: 12px;
}
#footer p a:hover { color: #d3d9e2; }